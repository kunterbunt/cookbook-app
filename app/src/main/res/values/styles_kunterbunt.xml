<resources>
    <style name="Theme.Kunterbunt" parent="Theme.Kunterbunt.Base">
    </style>
    <!-- Base theme applied no matter what API. -->
    <style name="Theme.Kunterbunt.Base" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <!-- We will be using the toolbar so no need to show ActionBar. -->
        <item name="windowActionBar">false</item>
        <!-- Primary color (for ActionBar). -->
        <item name="colorPrimary">@color/app_color</item>
        <!-- Darker variant (Status Bar). -->
        <item name="colorPrimaryDark">@color/app_color_dark</item>
        <!-- Accent color. -->
        <item name="colorAccent">@color/app_color_accent</item>
        <item name="android:windowBackground">@color/background</item>
        <!-- You can also set colorControlNormal, colorControlActivated
            colorControlHighlight and colorSwitchThumbNormal. -->
    </style>
    <style name="FAB">
        <item name="android:layout_width">@dimen/fab_button_diameter</item>
        <item name="android:layout_height">@dimen/fab_button_diameter</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">@dimen/fab_button_margin_bottom</item>
        <item name="android:layout_marginRight">@dimen/fab_button_margin_right</item>
        <item name="android:src">@drawable/fab_ic_add</item>
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="FAB.Final">
        <item name="android:background">@drawable/button_fab</item>
    </style>
</resources>